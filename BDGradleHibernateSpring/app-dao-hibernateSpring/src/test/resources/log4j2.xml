<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
        </Console>
        <File name="File" fileName="/tmp/output.log">
            <PatternLayout pattern="%d %с [%t] %m%n"/>
        </File>
    </Appenders>
    <Loggers>
        <Logger name="com.brest.bank.dao" level="trace">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="File"/>
        </Logger>
        <Logger name="org.hibernate.mapping" level="trace">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="File"/>
        </Logger>

        <Logger name="org.springframework.orm.hibernate4" level="trace">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="File"/>
        </Logger>
        <Logger name="org.springframework.jdbc" level="DEBUG">
            <AppenderRef ref="Console"/>
        </Logger>

        <Logger name="org.springframework.transaction" level="DEBUG">
            <AppenderRef ref="Console"/>
        </Logger>
        <!-- Log all SQL parameters -->
        <Logger name="org.hibernate.type.descriptor.sql.BasicBinder" level="TRACE">
            <AppenderRef ref="Console"/>
        </Logger>
        <!-- Log all JDBC parameters -->
        <Logger name="org.hibernate.type" level="TRACE">
            <AppenderRef ref="Console"/>
        </Logger>
        <!-- Log all SQL DML statements as they are executed -->
        <Logger name="org.hibernate.SQL" level="TRACE">
            <AppenderRef ref="Console"/>
        </Logger>
        <!-- Log all SQL DDL statements as they are executed -->
        <Logger name="org.hibernate.tool.hbm2ddl" level="DEBUG">
            <AppenderRef ref="Console"/>
        </Logger>
        <!-- Log the state of all entities (max 20 entities) associated with the session at flush time -->
        <Logger name="org.hibernate.pretty" level="DEBUG">
            <AppenderRef ref="Console"/>
        </Logger>
        <!-- Log all second-level cache activity -->
        <Logger name="org.hibernate.cache" level="DEBUG" >
            <AppenderRef ref="Console"/>
        </Logger>
        <!-- Log transaction related activity -->
        <Logger name="org.hibernate.transaction" level="DEBUG">
            <AppenderRef ref="Console"/>
        </Logger>
        <!-- Log all JDBC resource acquisition -->
        <Logger name="org.hibernate.jdbc" level="DEBUG" >
            <AppenderRef ref="Console"/>
        </Logger>
        <!-- Log HQL and SQL ASTs during query parsing -->
        <Logger name="org.hibernate.hql.ast.AST" level="DEBUG">
            <AppenderRef ref="Console"/>
        </Logger>
        <!-- Log all JAAS authorization requests -->
        <Logger name="org.hibernate.secure" level="DEBUG">
            <AppenderRef ref="Console"/>
        </Logger>
        <!-- Log everything (a lot of information, but very useful for troubleshooting) -->
        <Logger name="org.hibernate" level="DEBUG">
            <AppenderRef ref="Console"/>
        </Logger>
        <Root level="error">
            <AppenderRef ref="Console"/>
        </Root>
    </Loggers>
</Configuration>